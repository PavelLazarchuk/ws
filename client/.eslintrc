{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "react-app",
        "prettier",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import",
        "prettier"
    ],
    "rules": {
        "semi":"error",
        "indent":"off",
        "no-tabs":"off",
        "no-alert":"error",
        "eol-last":"error",
        "no-console":"error",
        "no-plusplus":"error",
        "max-len": ["warn", 100],
        "react/prop-types": "off",
        "object-shorthand":"warn",
        "consistent-return":"off",
        "no-array-constructor":"error",
        "prefer-destructuring":"error",
        "jsx-quotes": [1, "prefer-double"],
        "react-hooks/exhaustive-deps": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
              "paths": ["src"]
            }
        }
    }
}
